{
  "name": "hero-workshop",
  "version": "1.0.0",
  "description": "Hero Workshop - A web-based character sheet editor for the HERO System RPG",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev -w @hero-workshop/frontend",
    "dev:backend": "npm run dev -w @hero-workshop/backend",
    "build": "npm run build -w @hero-workshop/shared && npm run build -w @hero-workshop/backend && npm run build -w @hero-workshop/frontend",
    "build:shared": "npm run build -w @hero-workshop/shared",
    "build:backend": "npm run build -w @hero-workshop/backend",
    "build:frontend": "npm run build -w @hero-workshop/frontend",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx,json,css}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rimraf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
